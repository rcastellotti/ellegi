// https://aka.ms/devcontainer.json
// https://github.com/devcontainers/templates/tree/main/src/alpine
{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"name": "ellegi",
	"runArgs": [
		"--name",
		"ellegi"
	],
	"forwardPorts": [
		9172
	],
	"workspaceFolder": "/workspaces/ellegi",
	"remoteUser": "root",
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.makefile-tools",
				"ms-vscode.cpptools",
				"esbenp.prettier-vscode"
			]
		}
	}
}